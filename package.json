{
  "name": "@floracodex/nestjs-secrets",
  "version": "1.0.0",
  "description": "A cloud-agnostic configuration loader for NestJS with secret management integration",
  "keywords": [
    "nestjs",
    "config",
    "secrets",
    "aws",
    "gcp",
    "azure",
    "configuration"
  ],
  "author": "Michael De Soto",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "nest build",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --config ./test/jest-e2e.json --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floracodex/nest-config-secrets.git"
  },
  "bugs": {
    "url": "https://github.com/floracodex/nest-config-secrets/issues"
  },
  "homepage": "https://github.com/floracodex/nest-config-secrets#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.799.0",
    "@aws-sdk/client-ssm": "^3.799.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@google-cloud/secret-manager": "^6.0.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.3",
    "eslint": "^9.26.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0"
  },
  "peerDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.799.0",
    "@aws-sdk/client-ssm": "^3.0.0",
    "@azure/keyvault-secrets": "^4.0.0",
    "@google-cloud/secret-manager": "^6.0.1",
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/config": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-secrets-manager": {
      "optional": true
    },
    "@aws-sdk/client-ssm": {
      "optional": true
    },
    "@azure/keyvault-secrets": {
      "optional": true
    },
    "@google-cloud/secret-manager": {
      "optional": true
    }
  }
}
